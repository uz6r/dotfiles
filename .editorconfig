# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 2

[*.{lua}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{conf,config}]
indent_style = space
indent_size = 2
